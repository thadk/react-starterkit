@import 'normalize'
@import 'helper'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7

html
button
input
select
textarea
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)

body
  color: $black
  font-size: 1em
  line-height: 1.5

header
  background: $grey
  color:$black
  padding: 1em

  nav
    float:right
    user-select:none

  .nav-item
    float:left
    margin-left:.5em

    a.active
      text-decoration:underline

.content
  padding: 1em


// Map component
.map
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  border-width: 0 1px 1px;
  border-style: solid;
  border-color: $adb-grayline-darker;
  &.main-map
    top: $header-height;
